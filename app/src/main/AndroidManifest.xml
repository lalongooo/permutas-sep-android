<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lalongooo.permutassep">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.permutassep.presentation.AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeTemp">
        <activity
            android:name="com.permutassep.presentation.view.activity.ActivityAppOverview"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.permutassep.IntentEvaluator"
            android:label="@string/app_name">
            <intent-filter>

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="permuta-sep.herokuapp.com"
                    android:scheme="http" />
                <data
                    android:host="permuta-sep.herokuapp.com"
                    android:scheme="https" />

                <data
                    android:host="permuta-sep-dev.herokuapp.com"
                    android:scheme="http" />
                <data
                    android:host="permuta-sep-dev.herokuapp.com"
                    android:scheme="https" />

            </intent-filter>
        </activity>

        <activity
            android:name="com.permutassep.presentation.view.activity.ActivityWritePost"
            android:label="@string/app_name"
            android:parentActivityName="com.permutassep.presentation.view.activity.ActivityMain" />
        <activity
            android:name="com.permutassep.presentation.view.activity.ActivityWelcome"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.permutassep.presentation.view.activity.ActivityMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.permutassep.presentation.view.activity.ActivityNewPassword"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.permutassep.ui.ActivityNewPasswordEmailSent"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.permutassep.ui.ActivityNewPasswordCaptureEmail"
            android:label="@string/app_name"
            android:parentActivityName="com.permutassep.ui.ActivityLogin"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.permutassep.ui.ActivityLogin"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.permutassep.ui.ActivityMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.permutassep.ui.ActivitySignUp"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.permutassep.ui.ActivityCompleteFbData"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.permutassep.ui.ActivityNewPassword"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />
    </application>

</manifest>